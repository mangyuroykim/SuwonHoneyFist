		// 정수 입력 : 24
		// 정수 입력 : 10
		// 정수 입력 : 23
		// 정수 입력 : 5
		// 정수 입력 : 7
		// 평균 :
		int[] nums;
		
		Scanner sc= new Scanner(System.in);
		for(int num = 0; num <6; num++) {
		System.out.println("정수를 입력해 주세요 : ");
		int i = sc.nextInt();
		}

