<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"></transactionManager>
<!-- 			연결 생성에 DataSource 사용 -->
<!-- 			DataSource는 DBCP로 동작함, DataBaseConnectionPool의 약자로 -->
<!-- 			한번 생성한 연결을 POOL에 저장했다가 재사용하는 기술 -->
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
				<property name="username" value="BENQJDBC"/>
				<property name="password" value="BENQJDBC"/>
			</dataSource>			
		</environment>
	</environments>
	<mappers>
		<mapper resource="mapper/member-mapper.xml"/>
		<mapper resource="mapper/notice-mapper.xml"/>
	</mappers>
</configuration>